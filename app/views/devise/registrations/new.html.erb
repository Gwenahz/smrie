<section id=inscription-smarty class="">
  <div class="container">
    <div class="col-md-12">
      <h2 class="text-center">Rejoignez la communauté dès aujourd'hui</h2><br>
      <p>Sélectionnez les smartphones que vous savez réparer puis inscrivez-vous : </p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render 'devise/registrations/smartphone_form'%>
    </div>
        <div id="bloc-inscription">
          <%= devise_error_messages! %>
          <div class="form-group col-md-12">
            <%= f.label "Prénom" %><br />
            <%= f.text_field :prenom, class: "form-control" %>
          </div>
          <div class="form-group col-md-12">
             <%= f.label "E-mail" %><br />
             <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label "Choisissez un mot de passe" %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label "Confirmation du mot de passe" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          
        	
          <div class="form-group col-md-12">
            <%= f.submit "M'inscrire", class: "btn btn-success" %>
          </div>
        	</div>
    <% end %>    
  </div>
</section>
    
	
