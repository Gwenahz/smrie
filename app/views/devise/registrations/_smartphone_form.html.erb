<div>
	<div id="content">
        <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
            <li class="active"><a href="#apple" data-toggle="tab">Apple</a></li>
            <li><a href="#samsung" data-toggle="tab">Samsung</a></li>
            <li><a href="#nexus" data-toggle="tab">Nexus</a></li>
        </ul>
        <div id="my-tab-content" class="tab-content">
            <div class="tab-pane active" id="apple">
                <h1>Apple</h1>
                <p>red red red red red red</p>
                <% Smartphone.where(:marque => 'apple') do |smartphone| %>
					<label class="text-center col-md-3">
						<%= image_tag(smartphone.image.url, size: "150") %><br>
  						<%= check_box_tag "user[idphones][]", smartphone.id %>
						<%= smartphone.modele %>
					</label>
				<% end %>
            </div>
            <div class="tab-pane" id="samsung">
                <% Smartphone.all.each do |smartphone| %>
					<label class="text-center col-md-3">
						<%= image_tag(smartphone.image.url, size: "150") %><br>
  						<%= check_box_tag "user[idphones][]", smartphone.id %>
						<%= smartphone.modele %>
					</label>
				<% end %>
            </div>
            <div class="tab-pane" id="nexus">
                <h1>Yellow</h1>
                <p>yellow yellow yellow yellow yellow</p>
            </div>
        </div>
    </div>
		
</div>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#tabs').tab();
    });
</script>