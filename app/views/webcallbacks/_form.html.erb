<% @webcallback = Webcallback.new %>
<%= form_for @webcallback, :remote => true do |f| %>
  <% if @webcallback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@webcallback.errors.count, "error") %> prohibited this webcallback from being saved:</h2>

      <ul>
      <% @webcallback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="text-center" id="img_validation" style="display:none;"><%= image_tag("phone-icon.svg", size: "70") %></div>
  <div class="msg_validation" id="msg_validation"><h4></h4></div>
  <div class="col-md-12" id="social_media" style="display:none;">
    <div class="col-md-4"><div class="fb-like" data-href="https://www.facebook.com/lasmartphonerie" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div><br><br></div>
    <div class="col-md-8"><a class="twitter-follow-button" href="https://twitter.com/LaSmartphonerie" data-show-count="false"></a></div>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= f.number_field :numtel, :class => "form-control text-center", :maxlength => 10, :required => true, :placeholder => "Tapez ici pour saisir votre numéro", :id => "mon_champ", :onclick => "lancer_clavier()", :style => "height:50px; padding:10px 10px 10px 10px;" %><br>
    <%= f.submit "VALIDER", class: "btn btn-danger btn-block", :id => "wcb_submit", :style => "display:none;" %>
  </div>
  <div class="col-md-2"></div>
  <%= f.hidden_field :modele, :value => "" %>
  <%= f.hidden_field :panne, :value => "" %>
  <%= f.hidden_field :cp, :value => "" %>
  <%= f.hidden_field :email, :value => "" %>
  <%= f.hidden_field :sms, :value => "" %><br>
  <%= f.submit "Obtenir mon devis", class: "btn btn-default btn-block", :id => "wcb_submit", :style => "display:none;" %>
  <div class="col-sm-12 text-center" id="keyboard" style="display:none;">
      <hr>
      <div id=""></div>
</div>
<% end %>

<script type="text/javascript">

  $("#wcb_numtel").click(function(event) {
    document.getElementById('virtualKeyboard').style.display = 'block';
    document.getElementById('wcb_submit').style.display = 'block';
    mixpanel.track("Clic sur champ numéro");
  })
</script>