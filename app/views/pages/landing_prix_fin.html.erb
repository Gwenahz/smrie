    <script type="text/javascript">

      $('#input-date .input-group.date').datepicker({
        startDate: "+1d",
        endDate: "+1m",
        maxViewMode: 0,
        language: 'fr',
        autoclose: true
      });

        function modele_select() {
            monModele = document.getElementById("modele_").value;
            document.getElementById('help_modele').value = monModele;

            if (monModele == "" || maPanne == "") {
                document.querySelector('#bt-modal').innerHTML = "<br><button type='button' class='btn btn-danger btn-lg btn-block' data-toggle='modal' data-target='#myModal' id='bt_modal'><strong>VALIDER</strong></button>";
                document.querySelector('#bt-form').style.display = 'none';
                document.querySelector('#bt-modal').style.display = 'block';
              } else if (monModele != "" && maPanne != "") {
                  document.querySelector('#bt-form').style.display = 'block';
                  document.querySelector('#bt-modal').style.display = 'none';

            };
        }

        function save_lieu() {
          monAdresse = document.getElementById("monAdresse").value;
          document.getElementById('help_adresse').value = monAdresse;
        }

        function show_lieu() {
          document.querySelector('#c_lieu').style.display = 'block';
          document.querySelector('#c_panne').style.display = 'none';
          document.querySelector('#c_date').style.display = 'none';
        }

        function show_date() {
          document.querySelector('#c_lieu').style.display = 'none';
          document.querySelector('#c_panne').style.display = 'none';
          document.querySelector('#c_date').style.display = 'block';
        }

        function panne_select() {
            maPanne = document.getElementById("panne_").value;
            document.getElementById('help_panne').value = maPanne;

            if (monModele == "" || maPanne == "") {
                document.querySelector('#bt-modal').innerHTML = "<br><button type='button' class='btn btn-danger btn-lg btn-block' data-toggle='modal' data-target='#myModal' id='bt_modal'><strong>VALIDER</strong></button>";
                document.querySelector('#bt-form').style.display = 'none';
                document.querySelector('#bt-modal').style.display = 'block';
              } else if (monModele != "" && maPanne != "") {
                  document.querySelector('#bt-form').style.display = 'block';
                  document.querySelector('#bt-modal').style.display = 'none';

            };
        }


