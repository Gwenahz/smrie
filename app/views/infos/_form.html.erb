<%= form_for([@info]) do |f| %>
  <% if @info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@info.errors.count, "error") %> prohibited this info from being saved:</h2>

      <ul>
      <% @info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-12">
    <%= f.label :nom %><br>
    <%= f.text_field :nom, class: "form-control", :required => true %>
  </div>
  <div class="form-group col-md-12">
    <%= f.label :prenom %><br>
    <%= f.text_field :prenom, class: "form-control", :required => true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :adresse %><br>
    <%= f.text_field :adresse, class: "form-control", :required => true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label "Complément d'adresse" %><br>
    <%= f.text_field :adressebis, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label "Code postal" %><br>
    <%= f.text_field :cp, class: "form-control", :required => true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :ville %><br>
    <%= f.text_field :ville, class: "form-control", :required => true %>
  </div>
  <div class="form-group col-md-12">
    <%= f.label "Numéro de téléphone" %><br>
    <%= f.text_field :numtel, class: "form-control", :required => true %>
  </div>
  <div class="actions col-md-12 text-right">
    <br>
    <%= f.submit "Valider", class: "btn btn-success" %>
  </div>
<% end %>
