<h1>Listing infos</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Adresse</th>
      <th>Cp</th>
      <th>Ville</th>
      <th>User-ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.nom %></td>
        <td><%= info.prenom %></td>
        <td><%= info.adresse %></td>
        <td><%= info.cp %></td>
        <td><%= info.ville %></td>
        <td><%= info.user_id %></td>
        <td><%= link_to 'Show', info %></td>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Info', new_info_path %>
