<div class="container">
  <h1>Mes informations personnelles</h1><br>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Nom:</strong>
    <%= @info.nom %>
  </p>

  <p>
    <strong>Prenom:</strong>
    <%= @info.prenom %>
  </p>

  <p>
    <strong>Adresse:</strong>
    <%= @info.adresse %>
  </p>

  <p>
    <strong>Cp:</strong>
    <%= @info.cp %>
  </p>

  <p>
    <strong>Ville:</strong>
    <%= @info.ville %>
  </p>

  <%= link_to 'Modifier mes informations', edit_info_path(@info) %>
</div>