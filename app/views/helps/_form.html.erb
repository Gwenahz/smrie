<% @help = Help.new %>
<%= form_for(@help) do |f| %>
  <% if @help.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@help.errors.count, "error") %> prohibited this help from being saved:</h4>

      <ul>
      <% @help.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= f.label :prenom %><br>
    <%= f.text_field :prenom, :class => "form-control", :placeholder => "Prénom" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :nom %><br>
    <%= f.text_field :nom, :class => "form-control", :placeholder => "Nom" %>
  </div>
  <div class="form-group col-md-12">
    <%= f.label "Code postal" %><br>
    <%= f.text_field :cp, :class => "form-control", :placeholder => "Code Postal (ex: 75001)" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :modele %><br>
    <%= f.text_field :modele, :class => "form-control", :placeholder => "(ex: Apple iPhone 5S)" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :panne %><br>
    <%= f.text_field :panne, :class => "form-control", :placeholder => "(ex: Ecran cassé, bouton home défectueux...)" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label "Numéro de téléphone" %><br>
    <%= f.number_field :numtel, :class => "form-control", :placeholder => "Numéro de téléphone" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label "Email" %><br>
    <%= f.text_field :mail, :class => "form-control", :placeholder => "Adresse mail" %>
  </div>
    <%= f.submit "VALIDER", class: "btn btn-success btn-block" %><br>
  <div class="form-group">*Ces champs sont nécessaires afin de pouvoir vous recontacter</div>
<% end %>
