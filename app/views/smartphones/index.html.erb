<h1>Liste des Smartphones</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
	  <th>Marque</th>
      <th>Modele</th>
      <th>Couleur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @smartphones.each do |smartphone| %>
      <tr>
        <td><%= image_tag smartphone.image.url(:medium) %></td>
		<td><%= smartphone.marque %></td>
        <td><%= smartphone.modele %></td>
        <td><%= smartphone.couleur %></td>
        <td><%= link_to 'Show', smartphone, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_smartphone_path(smartphone), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', smartphone, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

