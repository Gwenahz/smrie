<div class="container">
  <h1>Liste des villes de mon secteur de r√©paration</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Villes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @secteurs.each do |secteur| %>
        <tr>
          <td><%= secteur.ville %></td>
          <td><%= link_to 'Modifier', edit_secteur_path(secteur) %></td>
          <td><%= link_to 'Supprimer', secteur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Ajouter une nouvelle ville', new_secteur_path %>
</div>
