<h1>Listing secteurs</h1>

<table>
  <thead>
    <tr>
      <th>Ville</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secteurs.each do |secteur| %>
      <tr>
        <td><%= secteur.ville %></td>
        <td><%= secteur.user_id %></td>
        <td><%= link_to 'Show', secteur %></td>
        <td><%= link_to 'Edit', edit_secteur_path(secteur) %></td>
        <td><%= link_to 'Destroy', secteur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secteur', new_secteur_path %>
