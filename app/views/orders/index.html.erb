<div class="container">
  <h1>Liste des Commandes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Statut</th>
        <th>Reparateur</th>
        <th>Prenom</th>
        <th>Nom</th>
        <th>Modele</th>
        <th>Panne</th>
        <th>Couleur</th>
        <th>Prix</th>
        <th>Date reparation</th>
        <th>Heure reparation</th>
        <th>Ville</th>
        <th>Commentaire</th>
        <th>Code Promo</th>
        <th>Paye</th>
        <th>Note Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.order(id: :desc).each do |order| %>
      <% if order.statut == nil  %>
        <% if order.reparateur == nil || order.reparateur == ""  %>
          <% if order.paye == true  %>
            <tr>
          <% else %>
            <tr class="danger">
          <% end %>     
        <% else %>
          <tr>
        <% end %>
      <% else %>
        <% if order.reparateur == nil || order.reparateur == ""  %>
          <tr class="warning">
        <% else %>
          <% if order.paye == true %>
            <tr class="success">
          <% else %>
            <tr class="info">
          <% end %>
        <% end %>
      <% end %>
        
          <td><%= order.statut %></td>
          <td><%= order.reparateur %></td>
          <td><%= order.prenom %></td>
          <td><%= order.nom %></td>
          <td><%= order.modele %></td>
          <td><%= order.panne %></td>
          <td><%= order.couleur %></td>
          <td><%= order.prix %></td>
          <td><%= order.date %></td>
          <td><%= order.heure_reparation %></td>
          <td><%= order.ville %></td>
          <td><%= order.commentaire %></td>
          <td><%= order.promocode %></td>
          <td><%= order.paye %></td>
          <td><%= order.note %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path %>
</div>
