<h1>Listing commandes</h1>

<table>
  <thead>
    <tr>
      <th>Modele</th>
      <th>Panne</th>
      <th>Prix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commandes.each do |commande| %>
      <tr>
        <td><%= commande.modele %></td>
        <td><%= commande.panne %></td>
        <td><%= commande.prix %></td>
        <td><%= link_to 'Show', commande %></td>
        <td><%= link_to 'Destroy', commande, method: :delete, data: { confirm: 'Are you sure?' },
        :remote => true, :class => 'delete_commande' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag({:action => "test"}, {remote: true}) do %>

  <%= text_field_tag("name","iPhone") %>
  Entrez texte
  <%= submit_tag("TEST") %>
<% end %>

